<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent" android:background="#FFF"
    android:layout_height="wrap_content">
    <android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/topupLayout"
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center" android:layout_marginTop="10dp"
            android:textSize="18dp" android:textStyle="bold"
            android:layout_height="wrap_content" android:text="@string/complaint_category"/>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_below="@id/topupLayout" android:layout_marginTop="20dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="2dp"/>
</LinearLayout>